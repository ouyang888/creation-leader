.order .top {
  background: #fff;
  height: 225rpx;
  border-radius: 0px 0px 10rpx 10rpx;
  box-shadow: 0px 7rpx 27rpx 0px rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  box-sizing: border-box;
}

.order .top .search {
  width: 690rpx;
  height: 64rpx;
  background: #F4F6F6;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.order .top .search .search-icon {
  width: 27rpx;
  height: 27rpx;
}

.order .top .search .search-input {
  font-size: 24rpx;
  color: #999999;
  margin-left: 10rpx;
  width: 100%;
}

.order .top .tab-bar {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  font-size: 28rpx;
  color: rgba(42, 42, 42, 1);
  font-family: Source Han Sans CN;
  font-weight: 400;
  justify-content: space-between;
  border-top: 2rpx solid #E4E9F0;
}

.order .top .tab-bar .item{
 text-align: center;
  width: 25%;
}

.order .top .tab-bar .cur{
  border-bottom:6rpx solid #3390FF;
}