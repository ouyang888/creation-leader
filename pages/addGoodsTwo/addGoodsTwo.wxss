.add-goods-two .product-pic .item {
  height: 500rpx;
}

.add-goods-two .specs-type-form {
  background: #fff;
  box-shadow: 0px 7rpx 27rpx 0px rgba(0, 0, 0, 0.05);
  border-radius: 10rpx;
  padding: 0 30rpx;
}

.add-goods-two .specs-type-form .specs-item {
  display: flex;
  height: 100rpx;
  align-items: center;
  border-bottom: 2rpx solid #E4E9F0;
}

.add-goods-two .specs-type-form .specs-item .xin {
  font-size: 38rpx;
  color: #FF2522;
  margin-right: 6rpx;
  padding-top: 15rpx;
}

.add-goods-two .specs-type-form .specs-item .text {
  white-space: nowrap;
  font-size: 28rpx;
  color: #666666;
}

.add-goods-two .specs-type-form .specs-item .spece-input-length {
  color: #999999;
  font-size: 28rpx;
}

.add-goods-two .specs-type-form .specs-item .spece-unit {
  font-size: 28rpx;
  color: #2A2A2A;
}

.add-goods-two .specs-type-form .specs-item:last-child {
  border-bottom: 0;
}

.add-goods-two .specs-type-form .specs-item .check-radio {
  padding-top: 4rpx;
  font-size: 28rpx;
  color: #2A2A2A;
}

.add-goods-two .specs-type-form .specs-item .check-radio .first {
  margin-left: 49rpx
}

.add-goods-two .specs-type-form .specs-item .check-radio .second {
  margin-left: 60rpx
}

.add-goods-two .specs-type-form .specs-item .check-radio .radio-name {
  vertical-align: middle;
}

.add-goods-two .specs-type-form .specs-item .specs-input {
  width: 100%;
  font-size: 28rpx;
  color: #999999;
  margin-left: 49rpx;
  margin-top: 4rpx;
}


.add-goods-two .specs-type-form .specs-item .select-list .picker {
  color: #2A2A2A;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  display: flex;
  align-items: center;
}

.add-goods-two .specs-type-form .specs-item .select-list .picker .icon-select-arrow {
  width: 12rpx;
  height: 20rpx;
  transform: rotate(-90deg);
  margin-left: 20rpx;
  margin-top: 6rpx;
}

/* 单选按钮样式*/
.add-goods-two .specs-type-form .specs-item .check-radio radio .wx-radio-input {
  width: 30rpx;
  height: 30rpx;
  border: 3rpx solid #B5B5B5;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: none !important;
}

/*单选按钮选中后内部样式*/
.add-goods-two .specs-type-form .specs-item .check-radio radio .wx-radio-input.wx-radio-input-checked {
  border: 3rpx solid #3390FF !important;
}

.add-goods-two .specs-type-form .specs-item .check-radio radio .wx-radio-input.wx-radio-input-checked::before {
  width: 75%;
  height: 75%;
  background: #3390FF;
  border-radius: 100%;
  content: '';
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.add-goods-two .product-description {
  margin-top: 40rpx;
  padding: 30rpx;
  background: #fff;
  box-shadow: 0px 7rpx 27rpx 0px rgba(0, 0, 0, 0.05);
  border-radius: 10rpx 10rpx 0px 0px;
}

.add-goods-two .product-description .product-textarea {
  width:690rpx;
  min-height: 260rpx;
  border: 2rpx solid rgba(228, 233, 240, 1);
  border-radius: 10rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

.add-goods-two .product-description .save-btn{
  width:690rpx;
  height:80rpx;
  color: #fff;
  font-size: 28rpx;
  margin-top: 150rpx;
  border-radius:39rpx;
  font-weight: normal;
  background: rgba(51, 144, 255, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}
.add-goods-two .product-description .save-btn:active{
  opacity: 0.6;
}