.house-type {
  position: relative;
  height: 100vh;
}

.house-type .product-pic .item {
  height: 500rpx;
}

.house-type .table-list {
  padding: 30rpx;
  margin-bottom: 120rpx;
}

.house-type .table-list .tr {
  display: flex;
  align-items: center;
  border: 1px solid #E4E9F0;
  border-bottom: 0;
}

.house-type .table-list .tr:last-child {
  border-bottom: 1px solid #E4E9F0;
}

.house-type .table-list .tr .td {
  width: 114rpx;
  min-height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-right: 1px solid #E4E9F0;
}

.house-type .table-list .tr .td.cur {
  color: #FF2522;
}

.house-type .table-list .tr.title {
  color: #666666;
  font-size: 26rpx;
}

.house-type .table-list .tr:nth-child(odd) {
  background-color: #F1F3F4;
}

.house-type .table-list .tr .td.pic {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}

.house-type .table-list .tr.detail {
  color: #2A2A2A;
  font-size: 28rpx;
}

.house-type .table-list .tr .td.pic .pic-box {
  width: 88rpx;
  height: 88rpx;
  border-radius: 10rpx;
}

.house-type .table-list .tr .td.pic .pic-box .icon {
  width: 100%;
  height: 100%;
}

.house-type .save-btn{
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: #fff;
}

.house-type .save-btn .btn{
  padding: 0;
  margin: 0 30rpx;
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  bottom: 30rpx;
  background-color: #3390FF;
  border-radius:39rpx;
  font-family:Source Han Sans CN;
  font-weight: normal;
}

.house-type .save-btn .btn:active{
  opacity: 0.6;
}