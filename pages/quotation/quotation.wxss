/* pages/quotation/quotation.wxss */
.container {
  padding: 0rpx 20rpx;
}



.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0px 7rpx 27rpx 0px rgba(0, 0, 0, 0.05);
  margin-top: 20rpx;
}

.content {
  width: 100%;
  line-height: 22px;
  margin-right: 0;
  box-sizing: border-box;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
}

.del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .content,

.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}


.quotation .container .content .item {
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.quotation .container .content .item .left {
  display: flex;
}

.quotation .container .content .item .left .pic {
  min-width: 120rpx;
  height: 120rpx;
  border-radius: 10px;
  margin-right: 20rpx;
}

.quotation .container .content .item .left .pic .img {
  width: 100%;
  height: 100%;
}

.quotation .container .content .item .left .left-text .name {
  font-size: 32rpx;
  color: #2A2A2A;
  font-family: Source Han Sans CN;
  font-weight: 500;
}