.build-manage .select-room-bar{
    background: #fff;
    box-shadow:0 7rpx 27rpx 0 rgba(0, 0, 0, 0.05);
    border-radius:10rpx;
    margin-top: 20rpx;
    padding-bottom: 0;
    margin-top: 20rpx;
}

.build-manage .select-room-bar .title{
    font-size:28rpx;
    font-family:Source Han Sans CN;
    font-weight:500;
    color:rgba(42,42,42,1);
    border-bottom: 2rpx solid #E4E9F0;
    margin: 0 30rpx;
    padding-top: 30rpx;
    padding-bottom: 38rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.build-manage .select-room-bar .title .img-del{
    width:34rpx;
    height:36rpx;
}

.build-manage .select-room-bar .list{
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 7rpx;
}

.build-manage .select-room-bar .list .item{
    display: flex;
    align-items: center;
    justify-content: center;
    width:150rpx;
    height:68rpx;
    background:rgba(244,246,246,1);
    border-radius:34rpx;
    font-size: 28rpx;
    color: #999999;
    margin: 19rpx;
}

.build-manage .select-room-bar .list .item.add{
    background: #3390FF;
    color: #fff;
    font-size: 36rpx;
}

.build-manage .select-room-bar .list .item.add:active{
    opacity: 0.5;
}

.build-manage .select-room-bar .list .item.cur{
    border: 1px solid #3390FF;
    color:#3390FF;
}

.build-manage .save-bottom{
    background: #fff;
    padding: 60rpx 30rpx 10rpx;
    box-sizing: border-box;
}

.build-manage .save-bottom .btn{
    width:690rpx;
    height:80rpx;
    background:rgba(51,144,255,1);
    border-radius:39rpx;
    color: #fff;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: normal;
}
.build-manage .save-bottom .btn:active{
    opacity: 0.5;
}

