.add-house-manage .product-pic{
    height: 500rpx;
}

.add-house-manage .product-pic .item{
    height: 100%;
}

.add-house-manage .product-pic .item .img{
    width: 100%;
    height: 100%;
}
.add-house-manage .type-form{
    background: #fff;
    padding: 0 30rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #2A2A2A;
    box-shadow:0 7rpx 27rpx 0 rgba(0, 0, 0, 0.05);
    border-radius:10rpx;
}

.add-house-manage .type-form .item{
    display: flex;
    align-items: center;
    padding: 36rpx 0;
    border-bottom: 2rpx solid #E4E9F0;
}

.add-house-manage .type-form .item:last-child{
    border-bottom: 0;
}

.add-house-manage .type-form .item .name{
    display: inline-block;
    color: #666;
    min-width: 93rpx;
    margin-right: 50rpx;
    white-space: nowrap;
}

.add-house-manage .type-form .item .item-input{
    width: 100%;
    color: #2A2A2A;
}

.add-house-manage .related-room{
    background:rgba(255,255,255,1);
    box-shadow:0 7rpx 27rpx 0 rgba(0, 0, 0, 0.05);
    border-radius:10rpx;
    display: flex;
    align-items: center;
    margin-top: 20rpx;
    padding: 30rpx;
    box-sizing: border-box;
}

.add-house-manage .related-room .line{
    width:6rpx;
    height:30rpx;
    background:rgba(51,144,255,1);
    border-radius:3rpx;
    margin-right: 18rpx;
}

.add-house-manage .related-room .name{
    font-size:28rpx;
    font-family:Source Han Sans CN;
    font-weight:500;
    color:rgba(51,144,255,1);
}

.add-house-manage .select-room-bar{
    background: #fff;
    box-shadow:0 7rpx 27rpx 0 rgba(0, 0, 0, 0.05);
    border-radius:10rpx;
    margin-top: 20rpx;
    padding-bottom: 0;
}

.add-house-manage .select-room-bar .title{
    font-size:28rpx;
    font-family:Source Han Sans CN;
    font-weight:500;
    color:rgba(42,42,42,1);
    border-bottom: 2rpx solid #E4E9F0;
    margin: 0 30rpx;
    padding-top: 30rpx;
    padding-bottom: 38rpx;
}

.add-house-manage .select-room-bar .list{
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 7rpx;
}

.add-house-manage .select-room-bar .list .item{
    display: flex;
    align-items: center;
    justify-content: center;
    width:150rpx;
    height:68rpx;
    background:rgba(244,246,246,1);
    border-radius:34rpx;
    font-size: 28rpx;
    color: #999999;
    margin: 19rpx;
}

.add-house-manage .select-room-bar .list .item.cur{
    border: 1px solid #3390FF;
    color:#3390FF;
}

.add-house-manage .save-bottom{
    background: #fff;
    padding: 60rpx 30rpx 10rpx;
    box-sizing: border-box;
}

.add-house-manage .save-bottom .btn{
    width:690rpx;
    height:80rpx;
    background:rgba(51,144,255,1);
    border-radius:39rpx;
    color: #fff;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.add-house-manage .save-bottom .btn:active{
    opacity: 0.5;
}

